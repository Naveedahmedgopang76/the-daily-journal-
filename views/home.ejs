<%- include("partials/header.ejs") %>

<div class="container">
  <h1>Welcome to My Daily Journal</h1>
  <p><%= StartingContent %></p>
</div>

<div class="container">
  <% posts.forEach(function(post) { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p>
      <%= post.content.substring(0, 100) + "..." %><a
        href="/posts/<%= post.title %>"
        >Read more</a
      >
    </p>
  </div>
  <% }); %>
</div>

